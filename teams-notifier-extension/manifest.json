{
  "manifest_version": 3,
  "name": "Teams Telegram Notifier",
  "version": "1.2",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.telegram.org/*",
    "*://teams.microsoft.com/*",
    "*://teams.cloud.microsoft/*",
    "*://*.bennish.net/*"
  ],
  "action": {
    "default_popup": "settings.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://teams.cloud.microsoft/*",
        "*://*.bennish.net/*"
      ],
      "js": ["bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}