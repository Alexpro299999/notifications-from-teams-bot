{
  "manifest_version": 3,
  "name": "Teams Telegram Notifier",
  "version": "2.2",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.telegram.org/*"
  ],
  "action": {
    "default_popup": "settings.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://teams.cloud.microsoft/*",
        "*://*.bennish.net/*"
      ],
      "js": ["interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://teams.cloud.microsoft/*",
        "*://*.bennish.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ]
}