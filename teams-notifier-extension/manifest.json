{
  "manifest_version": 3,
  "name": "Teams Telegram Notifier",
  "version": "3.0",
  "permissions": ["storage", "action"],
  "host_permissions": [
    "https://api.telegram.org/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://teams.cloud.microsoft/*",
        "*://*.bennish.net/*"
      ],
      "js": ["content/interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://teams.cloud.microsoft/*",
        "*://*.bennish.net/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ]
}